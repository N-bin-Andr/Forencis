Public Function create_Initials(initials As String) As String
'Функция создания инициала с точкой
    If initials <> "" Then
        Dim tmp As String
            tmp = Left(initials, 1) & "."
        create_Initials = StrConv(tmp, vbProperCase)
    End If
Debug.Print "Инициал с точкой-" & tmp
End Function
'
Friend Function create_InitialslName() As String
'функция = фамилия + инициалы имени и отчества (с заглавной буквы с точками)
Dim tmp1 As String, tmp2 As String, tmp3 As String
'   фамилия
    If surname = "" Then
        tmp1 = "(фамилия не указана)"
    Else: tmp1 = surname
    End If
'   Имя:
    If name = "" Then
        tmp2 = "(имя не указано) "
    Else: tmp2 = create_Initials(name)
    End If
'   Отчество
    If midName = "" Then
        tmp3 = "(отчество не указано)"
    Else: tmp3 = create_Initials(midName)
    End If
create_InitialslName = tmp1 & Chr(32) & tmp2 & tmp3
Debug.Print "clmHR_Official create_InitialslName- " & create_InitialslName
End Function
